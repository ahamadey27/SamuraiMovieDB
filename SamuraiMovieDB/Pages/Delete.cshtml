@page "{id:int}"

@model SamuraiMovieDB.Pages.DeleteModel

@{
    ViewData["Title"] = "Delete Movie";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this movie?</h3>
<div>
    <h4>Movie Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie!.Name) @* Added ! to suppress warning *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie!.Name) @* Added ! to suppress warning *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie!.Year) @* Added ! to suppress warning *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie!.Year) @* Added ! to suppress warning *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie!.Director) @* Added ! to suppress warning *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie!.Director) @* Added ! to suppress warning *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie!.Color) @* Added ! to suppress warning *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie!.Color) @* Added ! to suppress warning *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie!.Description) @* Added ! to suppress warning *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie!.Description) @* Added ! to suppress warning *@
        </dd>
    </dl>

    @* Form to handle the POST request for deletion *@
    <form method="post">
        @* Hidden input for the ID (though OnPostAsync uses the route value) *@
        <input type="hidden" asp-for="Movie!.Id" /> @* Added ! to suppress warning *@
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>